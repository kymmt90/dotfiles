#!/usr/bin/env bash

set -uo pipefail

type brew >/dev/null 2>&1
if [ $? -ne 0 ]; then
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"
fi
eval "$(/opt/homebrew/bin/brew shellenv)"

brew update -q
brew bundle check -q
if [ $? -ne 0 ]; then
  brew bundle install --no-upgrade -q
fi

bin/apply-recipes
